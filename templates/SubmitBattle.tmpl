{{ define "SubmitBattle" }}
  {{ template "Header" .Title }}
    {{ template "Menu" .User }}
    <div class="container">
      <div class="battle-information">
        <form id="submit-battle" method="POST" action="/battle/submit">
        <nav class="battle-title">
            <input type="text" class="heading-1 submit-header submit-wide" id="title" name="title" maxlength="64" placeholder="Battle Title" required>
            <input type="submit" class="nav-submit" value="CREATE ðŸ”¥" />
        </nav>
        <div class="chips submit-border">
          <input placeholder="Enter Up To 3 Tags (optional)" class="submit-nobox custom-class">
        </div>
        <textarea rows="1" class="submit-border submit-nobox" id="rules" name="rules" maxlength="512" placeholder="Battle Rules (Supports Markdown Syntax)" required></textarea>
        <input type="text" class="submit-border submit-nobox" id="password" name="password" maxlength="64" placeholder="Password - Keep It Simple (Optional)">
        <div class="submit-border submit-label submit-wide">
            <span class="submit-text">Max Votes</span>
            <input type="number" class="submit-nobox" id="maxvotes" name="maxvotes" value="1" min="1" max="10" required>
        </div>
        <div class="container-form submit-border">
          <div class="submit-split1">
              <input type="text" class="datepicker submit-nobox" id="deadline-date" name="deadline-date" placeholder="Deadline Date" required>
          </div>
          <div class="submit-split2">
              <input type="text" class="timepicker submit-nobox" id="deadline-time" name="deadline-time" placeholder="Deadline Time" required>
          </div>
        </div>
        <div class="container-form submit-border">
          <div class="submit-split1">
              <input type="text" class="datepicker submit-nobox" id="votingdeadline-date" name="votingdeadline-date" placeholder="Voting Deadline Date" required>
          </div>
          <div class="submit-split2">
              <input type="text" class="timepicker submit-nobox" id="votingdeadline-time" name="votingdeadline-time"placeholder="Voting Deadline Time" required>
          </div>
        </div>
        <input type="url" class="submit-border submit-nobox" id="attachment" name="attachment" placeholder="Battle Attachment (URL, Optional)">
        <input type="hidden" name="timezone" id="timezone" value="">
        <input type="hidden" name="tags" id="tags" value="">
        </div>
        </form>
      </div>
      </div>
      <script>function chipUpdate() {$('#tags').val(JSON.stringify(this.chipsData))};
      autosize($('textarea'));
      $(document).ready(function(){
          $('.chips').chips({
            limit: 3,
            placeholder: 'Enter Up To 3 Tags (Optional)',
            secondaryPlaceholder: '+Tag',
            onChipAdd: (chipUpdate),
            onChipDelete: (chipUpdate),
            });
          $(".datepicker").datepicker(),$(".timepicker").timepicker(),$("#timezone").val(Intl.DateTimeFormat().resolvedOptions().timeZone)});</script>
  {{ template "Footer" .Toast }}
{{ end }}