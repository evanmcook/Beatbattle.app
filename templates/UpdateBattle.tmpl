{{ define "UpdateBattle" }}
  {{ template "Header" .Title }}
    {{ template "Menu" .User }}
    <div class="container">
      <div class="battle-information">
        <form id="submit-battle" method="POST" action="/battle/{{.Battle.ID}}/update">
        <nav class="battle-title">
            <input type="text" data-index="1" class="heading-1 submit-header submit-wide" id="title" name="title" maxlength="64" value="{{.Battle.Title}}" placeholder="Battle Title" required>
            <input type="submit" class="nav-submit" value="UPDATE ðŸ”¥" />
        </nav>
        <input data-index="2" class="submit-border submit-nobox" id="rules" name="rules" maxlength="255" value="{{.Battle.Rules}}" placeholder="Battle Rules" required>
        <input type="text" data-index="3" class="submit-border submit-nobox" id="password" name="password" value="{{.Battle.Password}}" maxlength="64" placeholder="Password (Optional)">
        <div class="submit-border submit-label submit-wide">
            <span class="submit-text">Max Votes</span>
            <input type="number" data-index="4" class="submit-nobox" id="maxvotes" name="maxvotes" value="{{.Battle.MaxVotes}}" value="1" min="1" max="10" required>
        </div>
        <div class="container-form submit-border">
          <div class="submit-split1">
              <input type="text" class="datepicker submit-nobox" data-index="5" id="deadline-date" name="deadline-date" value="{{.DeadlineDate}}". placeholder="Deadline Date" required>
          </div>
          <div class="submit-split2">
              <input type="text" class="timepicker submit-nobox" data-index="6" id="deadline-time" name="deadline-time" value="{{.DeadlineTime}}" placeholder="Deadline Time" required>
          </div>
        </div>
        <div class="container-form submit-border">
          <div class="submit-split1">
              <input type="text" class="datepicker submit-nobox" data-index="7" id="votingdeadline-date" name="votingdeadline-date"  value="{{.VotingDeadlineDate}}" placeholder="Voting Deadline Date" required>
          </div>
          <div class="submit-split2">
              <input type="text" class="timepicker submit-nobox" data-index="8" id="votingdeadline-time" name="votingdeadline-time"  value="{{.VotingDeadlineTime}}" placeholder="Voting Deadline Time" required>
          </div>
        </div>
        <input type="url" class="submit-border submit-nobox" data-index="9" id="attachment" name="attachment" value="{{.Battle.Attachment}}" placeholder="Battle Attachment (URL, Optional)">
        <input type="hidden" name="timezone" id="timezone" value="">
        </div>
        </form>
      </div>
      </div>
      <script>$(document).ready(function(){$(".datepicker").datepicker(),$(".timepicker").timepicker(),$("#timezone").val(Intl.DateTimeFormat().resolvedOptions().timeZone)}),$("#submit-battle").on("keydown","input",function(t){if(13==t.which){t.preventDefault();var e=$(t.target),i=parseFloat(e.attr("data-index"));i>=7&&(i=0),$('[data-index="'+(i+1).toString()+'"]').focus()}});</script>
  {{ template "Footer" .Toast }}
{{ end }}